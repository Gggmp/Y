#include<stdio.h>
#include<stdlib.h>

void convolution2(int* input1, int* input2, int* output, int mm, int nn)
{
	int* xx = (int*)malloc(sizeof(int) * (mm + nn - 1));
	for (int i = 0; i < mm + nn - 1; i++) {
		xx[i] = 0;
	}

	for (int i = 0; i < mm; i++) {
		for (int j = 0; j < nn; j++) {
			xx[i + j] += input1[i] * input2[j];
		}
	}

	for (int i = 0; i < mm + nn - 1; i++) {
		output[i] = xx[i];
	}
	delete[] xx;
}

int main() {
	int mm, nn;
	printf("第一个卷积数目\n");
	scanf("%d", &mm);

	int* input1 = (int*)malloc(sizeof(int) * mm);
	printf("第一个卷积数值\n");
	for (int i = 0; i < mm; i++) {
		scanf("%d", &input1[i]);
	}
	printf("第二个卷积数目\n");
	scanf("%d", &nn);
	int* input2 = (int*)malloc(sizeof(int) * nn);
	printf("第二个卷积数值\n");
	for (int j = 0; j < nn; j++) {
		scanf("%d", &input2[j]);
	}
	int* output = (int*)malloc(sizeof(int) * (mm + nn - 1));
	convolution2(input1, input2, output, mm, nn);

	printf("卷积结果\n");
	for (int i = 0; i < mm + nn - 1; i++)
	{
		printf("%d ", output[i]);
	}
	printf("\n");

	return 0;
}
